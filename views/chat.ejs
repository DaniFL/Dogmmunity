<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dogbot</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="w-full h-full bg-white shadow-md rounded-none overflow-hidden">
        <div class="flex flex-col h-full">
            <div class="px-4 py-3 border-b border-gray-300">
                <div class="flex justify-between items-center">
                    <h1 class="text-lg font-semibold text-gray-800">
                        Dogbot
                    </h1>
                    <div class="bg-green-500 text-white text-xs px-2 py-1 rounded-full">
                        Online
                    </div>
                </div>
            </div>
            <div id="messages" class="flex-1 p-3 overflow-y-auto flex flex-col space-y-2">
                <!-- Los mensajes se agregarán dinámicamente aquí -->
            </div>
            <form id="chat-form" class="px-3 py-2 border-t border-gray-300">
                <div class="flex gap-2">
                    <textarea id="message" name="message" rows="1" placeholder="Escribe tu mensaje..."
                        class="flex-1 p-2 border rounded-lg bg-gray-100 text-gray-800 border-gray-300 text-sm resize-none"></textarea>
                    <button
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1.5 px-3 rounded-lg transition duration-300 ease-in-out text-sm">
                        Enviar
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script>
        const chatForm = document.getElementById('chat-form');
        const messagesDiv = document.getElementById('messages');

        chatForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const message = document.getElementById('message').value;

            if (!message.trim()) return;

            // Mostrar el mensaje del usuario
            const userMessage = document.createElement('div');
            userMessage.className = 'chat-message self-end bg-blue-500 text-white max-w-xs rounded-lg px-3 py-1.5 text-sm';
            userMessage.textContent = message;
            messagesDiv.appendChild(userMessage);

            document.getElementById('message').value = '';

            try {
                const response = await fetch('/chat/send', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message }),
                });
                const data = await response.json();

                if (data.reply) {
                    const botMessage = document.createElement('div');
                    botMessage.className = 'chat-message self-start bg-gray-300 text-gray-800 max-w-xs rounded-lg px-3 py-1.5 text-sm';
                    botMessage.textContent = data.reply;
                    messagesDiv.appendChild(botMessage);
                } else {
                    alert('Error al obtener respuesta del modelo');
                }
            } catch (err) {
                console.error('Error al enviar mensaje:', err);
                alert('Error al enviar el mensaje');
            }
        });
    </script>
</body>

</html>
